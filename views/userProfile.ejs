<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="/public/style/profile.css" />
  </head>
  <body>
    <div class="container">
      <h1>Profile</h1>
      <img src="../public/asset/download.png" alt="" />
      <p>Username: <%= user.username %></p>
      <p>Email: <%= user.email %></p>

      <% if (profile.length > 0 && profile[0].profileDetails.length > 0) { %> <%
      profile[0].profileDetails.forEach(profileDetail => { %>
      <p>Address: <%= profileDetail.address %></p>
      <p>Phone: <%= profileDetail.phone %></p>
      <p>Pin: <%= profileDetail.pin %></p>
      <% }); %> <% } else { %>
      <p>No profile details found.</p>
      <% } %>

      <a href="/user/editProfile">Edit Profile</a>
    </div>
  </body>
</html>
